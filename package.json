{
  "name": "nestjs-template",
  "version": "0.1.0",
  "description": "Goat - Rokket Labs' NestJS template for all backend projects",
  "author": "Goat <ignacio.cabrera@goatlab.io>, Rokket Labs <tomas@rokketlabs.com>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "npx rimraf dist",
    "prestart": "npx rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "yarn start:dev",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "update:packages": "ncu -u && npm install"
  },
  "dependencies": {
    "@goatlab/fluent": "^0.3.9",
    "@nestjs/common": "^7.0.13",
    "@nestjs/config": "^0.4.2",
    "@nestjs/core": "^7.0.13",
    "@nestjs/graphql": "^7.4.1",
    "@nestjs/jwt": "^7.0.0",
    "@nestjs/mongoose": "^7.0.1",
    "@nestjs/passport": "^7.0.0",
    "@nestjs/platform-fastify": "^7.0.13",
    "@nestjs/platform-socket.io": "^7.0.13",
    "@nestjs/serve-static": "^2.1.1",
    "@nestjs/swagger": "^4.5.6",
    "@nestjs/terminus": "^7.0.1",
    "@nestjs/typeorm": "^7.0.0",
    "@nestjs/websockets": "^7.0.13",
    "@typegoose/typegoose": "^7.1.0",
    "@types/mongoose": "^5.7.20",
    "apollo-server-fastify": "^2.13.1",
    "chokidar": "^3.4.0",
    "fastify-swagger": "^2.5.1",
    "nestjs-role-protected": "^0.1.3-alpha2",
    "rimraf": "^3.0.2",
    "typeorm": "^0.2.24"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.1.5",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.13",
    "@types/express": "^4.17.6",
    "@types/jest": "25.2.2",
    "@types/node": "^14.0.1",
    "@types/supertest": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-rokket-labs": "0.1.4",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^26.0.1",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "26.0.0",
    "ts-loader": "^7.0.4",
    "ts-node": "^8.10.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
